{
  "name": "mock-builder",
  "description": "Build the mock from PR/FAQ",
  "mcpServers": {
    "AWS Core MCP Server": {
      "command": "uvx",
      "timeout": 60000,
      "args": [
        "awslabs.core-mcp-server@latest"
      ],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      }
    },
    "AWS Documentation MCP Server": {
      "command": "uvx",
      "timeout": 60000,
      "args": [
        "awslabs.aws-documentation-mcp-server@latest"
      ],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR",
        "AWS_DOCUMENTATION_PARTITION": "aws"
      }
    },
    "aws-knowledge-mcp-server": {
      "command": "npx",
      "args": [
          "mcp-remote",
          "https://knowledge-mcp.global.api.aws"
      ]
    },
    "awslabs.nova-canvas-mcp-server": {
      "command": "uvx",
      "args": ["awslabs.nova-canvas-mcp-server@latest"],
      "env": {
        "AWS_PROFILE": "default",
        "AWS_REGION": "us-east-1",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": []
    }
  },
  "tools": [
	"*"
  ],
"allowedTools": [
    "fs_read",
    "fs_write", 
    "execute_bash",
    "use_aws",
    "report_issue",
    "@AWS Core MCP Server/prompt_understanding",
    "@awslabs.nova-canvas-mcp-server/generate_image",
    "@awslabs.nova-canvas-mcp-server/generate_image_with_colors",
    "@AWS Documentation MCP Server/read_documentation",
    "@AWS Documentation MCP Server/recommend", 
    "@AWS Documentation MCP Server/search_documentation",
    "@aws-knowledge-mcp-server/aws___read_documentation",
    "@aws-knowledge-mcp-server/aws___recommend",
    "@aws-knowledge-mcp-server/aws___search_documentation"
],
  "toolsSettings": {
    "execute_bash": {
      "alwaysAllow": [
        {
          "preset": "readOnly"
        }
      ]
    },
    "use_aws": {
      "alwaysAllow": [
        {
          "preset": "readOnly"
        }
      ]
    }
  },
  "resources": [
    "file://mock/README.md",
    "file://mock/templete/DEPLOYMENT_GUIDE.md",
    "file://mock/templete/TRANCKER_INTEGRATION_GUIDE.md"
  ],
  "prompt":"あなたはあなたは経験豊富なソフトウェアエンジニアです。file://mock/prompt/prompt.md を読み込み、指示通りに作業を行ってください。まず、ユーザーには<application_requirements>の内容を入力するよう促してください。ユーザーから入力を得たら、次は<tracker_configuration>の情報を入力するよう促してください。<tracker_configuration>は必須ではありません。２つの入力をユーザーから得たら file://mock/prompt/prompt.md に基づいて作業を進めてください。遠慮せず、全力を尽くしてください。"
}